<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ActivityMapper">
    <resultMap id="ActivityResultMap" type="com.example.demo.model.Activity">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="type" column="type" />
        <result property="content" column="content" />
        <result property="timestamp" column="timestamp" />
    </resultMap>

    <select id="selectActivityById" resultMap="ActivityResultMap">
        SELECT * FROM activities WHERE id = #{id}
    </select>

    <select id="selectActivitiesByUserId" resultMap="ActivityResultMap">
        SELECT * FROM activities WHERE user_id = #{userId}
    </select>

    <insert id="insertActivity" parameterType="com.example.demo.model.Activity">
        INSERT INTO activities (user_id, type, content, timestamp)
        VALUES (#{userId}, #{type}, #{content}, #{timestamp})
    </insert>

    <update id="updateActivity" parameterType="com.example.demo.model.Activity">
        UPDATE activities SET type=#{type}, content=#{content}, timestamp=#{timestamp} WHERE id=#{id}
    </update>

    <delete id="deleteActivity" parameterType="long">
        DELETE FROM activities WHERE id=#{id}
    </delete>
</mapper>
