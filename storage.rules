rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable article files (index + markdown). Writers must be authenticated.
    match /articles/{allPaths=**} {
      allow read: if true; // public read
      allow write: if request.auth != null; // only signed-in users can upload article files
    }

    // Forum audio: public read, authenticated write
    match /forum_audios/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
